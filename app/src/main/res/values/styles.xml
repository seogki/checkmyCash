    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/rippleColor</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/rippleColor</item>
        <item name="android:headerBackground">@color/rippleColor</item>
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>


    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/rippleReverse</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <!--<item name="android:windowBackground">@color/white</item>-->

    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/statusbar</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/statusbar</item>
    </style>

    <style name="text10Style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
