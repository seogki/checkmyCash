<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="model"
            type="String"
            />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg_top_corner_only"
        tools:ignore="UnusedAttribute"
        >

        <TextView
            android:id="@+id/item_cate_txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/view_round_black"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:textColor="@color/statusbar"
            android:textSize="24sp"
            android:textStyle="bold"
            app:checkDay="@{model}"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="15"

            />

        <TextView
            android:id="@+id/item-cate_txt_days"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="2.5dp"
            android:layout_marginStart="4dp"
            android:gravity="bottom"
            android:letterSpacing="0.15"
            android:textColor="@color/darkGrey"
            android:textSize="13sp"
            android:textStyle="bold"

            app:checkDays="@{model}"
            app:layout_constraintBottom_toBottomOf="@id/item_cate_txt_time"
            app:layout_constraintStart_toEndOf="@+id/item_cate_txt_time"
            app:layout_constraintTop_toTopOf="@id/item_cate_txt_time"
            tools:text="화요일"

            />


        <TextView
            android:id="@+id/item-cate_txt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:gravity="end"
            android:letterSpacing="0.15"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:textColor="@color/statusbar"
            android:textSize="14sp"
            android:textStyle="bold"
            app:checkTotal="@{model}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="5,000원"
            />

    </android.support.constraint.ConstraintLayout>

</layout>